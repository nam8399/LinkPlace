<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".View.Fragment.ProfileSetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/back_button"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:background="@drawable/backbtn"
            />
        <TextView
            android:layout_width="93dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="프로필 설정"
            android:layout_marginLeft="19dp"
            android:textStyle="bold"
            android:textAppearance="@style/toptextname"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.38sp"
            android:gravity="left"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:elevation="40dp">
        <View
            android:layout_width="71dp"
            android:layout_height="4dp"
            app:layout_constraintBottom_toTopOf="@id/guide_textLinear"
            android:background="@drawable/progress_textline">
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/progress_textline2">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_textLinear"
        android:layout_marginTop="54dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberinputguide"
            android:layout_width="350dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:lineSpacingExtra="-1sp"
            android:text="사진을 1장 이상 등록해주세요"
            android:textAppearance="@style/guideinputnumberstyle"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/numberinputguide2"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintTop_toTopOf="@+id/guide_line"
            app:layout_constraintVertical_bias="0.434" />

        <LinearLayout
            android:id="@+id/nosendAuthNumLinear"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="34dp"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.31sp"
            android:gravity="top">
            <TextView
                android:id="@+id/nosendAuthNum"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="얼굴 혹은 자신의 매력이 잘 보이는 사진을 등록하면\n좋아요 확률이 올라가요!"
                android:textAppearance="@style/imagetiptext"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/nosendAuthNum"
            app:layout_constraintBottom_toBottomOf="parent"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="105dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
                <TextView
                    android:id="@+id/mainimage"
                    android:layout_width="45dp"
                    android:layout_height="16dp"
                    android:foregroundGravity="center"
                    android:layout_gravity="center|bottom"
                    android:text="프로필 사진"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:background="@drawable/mainimage">
                </TextView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="105dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/profileimage">
                </ImageView>
                <ImageView
                    android:id="@+id/deletebtn9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/deletebtn"
                    />
            </FrameLayout>
        </GridLayout>

        <Button
            android:id="@+id/inputimagebtn"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            android:background="@drawable/inputimagebtn"
            android:gravity="center"
            android:lineSpacingExtra="1sp"
            android:text="사진 추가"
            android:textAppearance="@style/inputimagebtn"
            android:textStyle="bold"
            android:translationY="-0.42sp" />

        <Button
            android:id="@+id/imagenextbtn"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="다음"
            android:background="@drawable/inputnumberbtn"
            android:textAppearance="@style/inputnumberbtn"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.42sp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>