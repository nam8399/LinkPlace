<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5"
    tools:context=".View.Fragment.MyProfileJobFragement">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E5E5E5">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:elevation="40dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_textLinear"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="94dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/myprofilejbo">

        <TextView
            android:id="@+id/numberinputguide"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:lineSpacingExtra="-1sp"
            android:text="현재 신분을 선택해주세요"
            android:textAppearance="@style/guideinputnumberstyle"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/numberinputguide2"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintTop_toTopOf="@+id/guide_line"
            app:layout_constraintVertical_bias="0.434" />

        <LinearLayout
            android:id="@+id/inputauthnumberLinear"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/studentbtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="학생"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/workerbtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="직장인"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/businessbtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="사업가"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/armybtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="군인"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/preparingbtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="취업준비중"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/etcbtn"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="기타"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/inputjobbtn"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="다음"
            android:background="@drawable/inputnumberbtn"
            android:textAppearance="@style/inputnumberbtn"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.42sp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>