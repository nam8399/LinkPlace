<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Activity.PlaceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        android:background="@color/white">
        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이 프로필"
            android:layout_marginLeft="19dp"
            android:textStyle="bold"
            android:textAppearance="@style/toptextname"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.38sp"
            android:gravity="left|bottom"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/circleimage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/circleimage"
            />

        <TextView
            android:id="@+id/myprofilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/circleimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="룰루랄라"
            android:textStyle="bold"
            android:textAppearance="@style/myprofilename"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.38sp"
            android:gravity="center_horizontal|top"
            />

        <LinearLayout
            android:id="@+id/myprofileagegender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/myprofilename"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/myprofileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24세"
                android:textAppearance="@style/myprofileage"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
            <TextView
                android:id="@+id/myprofilegender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/myprofileage"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:textColor="#EF5DA8"
                android:gravity="top"
                />
        </LinearLayout>

        <View
            android:id="@+id/myprofileline"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@drawable/myprofileline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myprofileagegender"
            android:layout_marginTop="48dp"
            />


        <LinearLayout
            android:id="@+id/slidinglayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/bottombar"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">
        </LinearLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bottombar"
            android:orientation="horizontal"
            android:backgroundTint="@color/Biggray"
            app:layout_constraintTop_toBottomOf="@id/slidinglayout">
            <ImageView
                android:id="@+id/mapbtn"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/messagebtn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/mapbtn2">
            </ImageView>
            <ImageView
                android:id="@+id/messagebtn"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toEndOf="@id/mapbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/myprofilebtn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/messagebtn">
            </ImageView>
            <ImageView
                android:id="@+id/myprofilebtn"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toEndOf="@id/messagebtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/myprofile2">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>