<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".View.Fragment.ProfileSetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/back_button"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:background="@drawable/backbtn"
            />
        <TextView
            android:layout_width="93dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="프로필 설정"
            android:layout_marginLeft="19dp"
            android:textStyle="bold"
            android:textAppearance="@style/toptextname"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.38sp"
            android:gravity="left"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_textLinear"
        android:orientation="horizontal"
        android:elevation="40dp">
        <View
            android:layout_width="71dp"
            android:layout_height="4dp"
            app:layout_constraintBottom_toTopOf="@id/guide_textLinear"
            android:background="@drawable/progress_textline">
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/progress_textline2">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_textLinear"
        app:layout_constraintTop_toTopOf="@id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberinputguide"
            android:layout_width="350dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:lineSpacingExtra="-1sp"
            android:text="생년월일을 입력해주세요"
            android:textAppearance="@style/guideinputnumberstyle"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/numberinputguide2"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintTop_toTopOf="@+id/guide_line"
            app:layout_constraintVertical_bias="0.434" />

        <TextView
            android:id="@+id/numberinputguide2"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="다른 사람에게는 나이만 공개됩니다."
            android:textAppearance="@style/guideinputnumberstyle2"
            android:translationY="-0.36sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.737" />

        <LinearLayout
            android:id="@+id/nosendAuthNumLinear"
            android:layout_width="350dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginBottom="34dp"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.31sp"
            android:gravity="top">
            <TextView
                android:id="@+id/nosendAuthNum"
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:text="* 이후 수정이 어려워요."
                android:textAppearance="@style/cantfixtext"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputauthnumberLinear"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/inputauthbirthyeartext"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputbirthnumbertext2"
                android:textAppearance="@style/inputauthnumbertext"
                android:textColor="#2B87F4"
                android:layout_weight="1"
                android:lineSpacingExtra="-1sp"
                android:gravity="center"
                android:inputType="number">
                <EditText
                    android:id="@+id/profile_year"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#2B87F4"
                    android:inputType="number"
                    android:hint="출생년도"
                    android:background="@null"
                    android:maxLength="4"
                    android:textColorHint="@android:color/darker_gray"
                    android:textAppearance="@style/inputauthnumbertext">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/inputauthbirtmonthhtext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/inputbirthnumbertext"
                android:textColor="#2B87F4"
                android:lineSpacingExtra="-1sp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2">
                <EditText
                    android:id="@+id/profile_month"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:hint="월"
                    android:background="@null"
                    android:maxLength="2"
                    android:textColor="#2B87F4"
                    android:textColorHint="@android:color/darker_gray"
                    android:textAppearance="@style/inputauthnumbertext">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/inputauthbirthdaytext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:textColor="#2B87F4"
                android:background="@drawable/inputbirthnumbertext"
                android:textAppearance="@style/inputauthnumbertext"
                android:lineSpacingExtra="-1sp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2">
                <EditText
                    android:id="@+id/profile_day"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:hint="일"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="#2B87F4"
                    android:textColorHint="@android:color/darker_gray"
                    android:textAppearance="@style/inputauthnumbertext">
                </EditText>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/inputbirthbtn"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="다음"
            android:background="@drawable/inputnumberbtn"
            android:textAppearance="@style/inputnumberbtn"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.42sp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>