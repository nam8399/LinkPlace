<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".View.Fragment.ProfileSetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/back_button"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:background="@drawable/backbtn"
            />
        <TextView
            android:layout_width="93dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="프로필 설정"
            android:layout_marginLeft="19dp"
            android:textStyle="bold"
            android:textAppearance="@style/toptextname"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.38sp"
            android:gravity="left"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:elevation="40dp">
        <View
            android:layout_width="71dp"
            android:layout_height="4dp"
            app:layout_constraintBottom_toTopOf="@id/guide_textLinear"
            android:background="@drawable/progress_textline">
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/progress_textline2">
        </View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/guide_textLinear"
        android:layout_marginTop="54dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/numberinputguide"
            android:layout_width="350dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:lineSpacingExtra="-1sp"
            android:text="현재 신분을 선택해주세요"
            android:textAppearance="@style/guideinputnumberstyle"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/numberinputguide2"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintTop_toTopOf="@+id/guide_line"
            app:layout_constraintVertical_bias="0.434" />

        <LinearLayout
            android:id="@+id/nosendAuthNumLinear"
            android:layout_width="350dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginBottom="34dp"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.31sp"
            android:gravity="top">
            <TextView
                android:id="@+id/nosendAuthNum"
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:text=""
                android:textAppearance="@style/cantfixtext"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
            <TextView
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.31sp"
                android:gravity="top"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputauthnumberLinear"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/studentbtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="학생"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/workerbtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="직장인"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/businessbtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="사업가"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/armybtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="군인"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/preparingbtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="취업준비중"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
            <Button
                android:id="@+id/etcbtn"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:gravity="center"
                android:text="기타"
                android:background="@drawable/genderselectbutton"
                android:textAppearance="@style/genderbtn"
                android:lineSpacingExtra="1sp"
                android:translationY="-0.42sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/inputjobbtn"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="다음"
            android:background="@drawable/inputnumberbtn"
            android:textAppearance="@style/inputnumberbtn"
            android:lineSpacingExtra="1sp"
            android:translationY="-0.42sp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>