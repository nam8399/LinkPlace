<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.FriendActivity">
    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/frinedprofileimg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <Button
                        android:id="@+id/back_button"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:background="@drawable/backbtn"
                        />
                    <TextView
                        android:id="@+id/topclickfriendname"
                        android:layout_width="93dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="프로필 설정"
                        android:layout_marginLeft="19dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/toptextname"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="left"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/frinedprofileimg"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/friendimageex">
                    </ImageView>
                    <ImageView
                        android:id="@+id/whitebackbtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/whitebackbtn"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                    </ImageView>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/clickfriendname"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="송대롱"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/clickfriendage"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginLeft="70dp"
                            android:text="24세"
                            android:layout_gravity="center|right"
                            android:textAppearance="@style/clickfriendage"
                            android:lineSpacingExtra="1sp"
                            android:translationY="-0.31sp"
                            android:gravity="top"
                            />
                        <TextView
                            android:id="@+id/clickfriendgender"
                            android:layout_width="24dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:text="여성"
                            android:layout_gravity="center|right"
                            android:textAppearance="@style/clickfriendgender"
                            android:lineSpacingExtra="1sp"
                            android:translationY="-0.31sp"
                            android:gravity="top"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/jobimg">
                    </ImageView>
                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginTop="2dp"
                        android:text="디자이너"
                        android:layout_gravity="center"
                        android:textAppearance="@style/friendjob"
                        android:lineSpacingExtra="1sp"
                        android:translationY="-0.36sp"
                        android:gravity="top"
                        />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@drawable/frinedline"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/clickdetaildata"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="상세정보"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="성격"
                        android:textAppearance="@style/clickcharactor"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:text="외향적인"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:text="활발한"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="취미"
                        android:textAppearance="@style/clickcharactor"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:text="영화/드라마"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:text="음악 감상"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frinedline"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:text="이런 친구를 찾아요"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textAppearance="@style/clickfriendname"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.38sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:text="취미가 비슷한"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:text="성격이 비슷한"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:text="말 잘하는"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:text="술 좋아하는"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        android:text="옷 좋아하는"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        android:text="연상"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbackground"
                        android:layout_marginLeft="5dp"
                        android:padding="4dp"
                        android:text="활발한"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/inputnumberbtn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="메시지 보내기"
        android:background="@drawable/sendmessage"
        android:textAppearance="@style/inputnumberbtn"
        android:lineSpacingExtra="1sp"
        android:translationY="-0.42sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>